<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="wucdbm_banner.cache.persistent" class="Wucdbm\Bundle\WucdbmBundle\Cache\Storage\ArrayStorage" shared="false" public="false"/>

        <service id="wucdbm_banner.manager.abstract" parent="wucdbm.manager.abstract">
            <call method="setCache">
                <argument type="service" id="wucdbm_banner.cache.persistent"/>
            </call>
        </service>

        <service id="wucdbm_banner.manager.banners" class="Wucdbm\Bundle\BannerBundle\Manager\BannerManager" parent="wucdbm_banner.manager.abstract"/>

    </services>
</container>