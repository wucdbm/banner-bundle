<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="wucdbm_banner.repo_factory_service">doctrine.orm.default_entity_manager</parameter>
        <parameter key="wucdbm_banner.repo_factory_method">getRepository</parameter>
    </parameters>

    <services>

        <!-- Override this if you wish to attach the bundle and its model to a custom entity manager -->
        <!-- I simply do not know how to get parameters to work for the attributes of the <factory/> element -->
        <service id="wucdbm_banner.repo.abstract" abstract="true">
            <factory service="doctrine.orm.default_entity_manager" method="getRepository"/>
        </service>

        <service id="wucdbm_banner.repo.banners" class="Wucdbm\Bundle\BannerBundle\Repository\BannerRepository"
                 parent="wucdbm_banner.repo.abstract">
            <argument>Wucdbm\Bundle\BannerBundle\Entity\Banner</argument>
        </service>

        <service id="wucdbm_banner.repo.banner_positions" class="Wucdbm\Bundle\BannerBundle\Repository\BannerPositionRepository"
                 parent="wucdbm_banner.repo.abstract">
            <argument>Wucdbm\Bundle\BannerBundle\Entity\BannerPosition</argument>
        </service>

    </services>
</container>